<div class="container-fluid">
    <h1 class="text-center display-6 my-4">Import Dataset</h1>
    <form action="/upload" method="POST" enctype="multipart/form-data" class="mb-5">
        {{#if message}}
        <div class="alert alert-info">
            <p>{{message}}</p>
        </div>
        {{/if}}
        <div class="custom-file mb-3">
            <input type="file" name="uploadCSVFile" id="file" class="custom-file-input">
            <label for="file" class="custom-file-label">Choose File</label>
        </div>
        <input type="submit" value="Submit" class="btn btn-primary btn-block">
    </form>

    {{#if dataset}}
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">No. Of Pregnancies</th>
                <th scope="col">Glucose</th>
                <th scope="col">Blood Pressure</th>
                <th scope="col">Skin Thickness</th>
                <th scope="col">Insulin Level</th>
                <th scope="col">Body Mass Ratio (BMI)</th>
                <th scope="col">Diabetes Pedigree Function (DPF)</th>
                <th scope="col">Age</th>
                <th scope="col">Result</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each dataset}}
            <tr>
                <th scope="row">{{noOfPregnancies}}</th>
                <td>{{glucose}}</td>
                <td>{{bloodPressure}}</td>
                <td>{{skinThickness}}</td>
                <td>{{insulinLevel}}</td>
                <td>{{bodyMassRatio}}</td>
                <td>{{diabetesPedigreeFunction}}</td>
                <td>{{age}}</td>
                <td>{{result}}</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-default" type="button" id="dropdownMenuButton" data-toggle="dropdown">
                            <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="#">Edit</a>
                            <a class="dropdown-item" href="#">Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{/if}}
</div>